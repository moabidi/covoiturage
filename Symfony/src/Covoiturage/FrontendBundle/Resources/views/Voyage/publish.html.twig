{% extends 'CovoiturageFrontendBundle::layout.html.twig' %}


{% block content %}

<h1>Publier Navette</h1>

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
      {{ form_label(form.horaire, "Horaire", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

      {{ form_errors(form.horaire) }}

      <div class="col-sm-4">
        {# Génération de l'input. #}
        {{ form_widget(form.horaire, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

  {{ form_widget(form.publish, {'attr': {'class': 'btn btn-primary'}}) }}

  {{ form_rest(form) }}

{{ form_end(form) }}

{% endblock %}