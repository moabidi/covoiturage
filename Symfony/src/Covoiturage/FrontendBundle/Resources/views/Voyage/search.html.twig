{% extends 'CovoiturageFrontendBundle::layout.html.twig' %}

{%  block content %}
{% if count_voyages > 0 %}
    <h1>{{ count_voyages }} navettes trouvées!</h1>
<div class="price-list">
        <ul class="price-top clearfix">
            <li class="price-content">Trajets</li>
            <li class="price">Pl.libres & Prix</li>
            <li class="price-reserve">Réservation</li>
        </ul>
</div>
    {% for voyage in list_voyages %}
        {% include 'CovoiturageFrontendBundle:line:voyage.html.twig' with {'voyage':voyage,'user_reservations':user_reservations} %}
    {% endfor %}

    {% include 'CovoiturageFrontendBundle:_common:pagination.html.twig' with {'pagination':pagination} %}
 {% else %}
    Aucune résultat trouvés pour votre recherche.
{% endif %}

{% endblock %}