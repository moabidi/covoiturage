<!doctype html>
<html>
<head>
    {%  include 'CovoiturageFrontendBundle:_common:head.html.twig' %}
</head>

<body class="home">

{% include 'CovoiturageFrontendBundle:_common:header.html.twig' %}

<!-- Main -->
<main class="main" role="main">

    <!-- Intro -->
    <div class="intro">
        <div class="wrap">
            <div class="textwidget">
                <h1 class="wow fadeInDown">BESOIN D'UNE TOUR?</h1>
                <h2 class="wow fadeInUp">Ceux qui partagent la route, où la part du voyage.</h2>
                <div class="actions">
                    <a href="{{ path('covoiturage_frontend_voyage_publish') }}" title="Poster Navette" class="btn large white wow fadeInLeft anchor">Poster Navette</a>
                </div>
            </div>
        </div>
    </div>
    <!-- //Intro -->



    {% include 'CovoiturageFrontendBundle:_common:search.html.twig' %}


    <!-- Services iconic -->
    <div class="services iconic white">
        <div class="wrap">
            <div class="row">
                <!-- Item -->
                <div class="one-third wow fadeIn">
                    <span class="circle"><span class="ico wallet"></span></span>
                    <h3>Économique</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy  tinc dolore magna.</p>
                </div>
                <!-- //Item -->

                <!-- Item -->
                <div class="one-third wow fadeIn" data-wow-delay=".2s">
                    <span class="circle"><span class="ico wand"></span></span>
                    <h3>Pratique</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy  tinc dolore magna.</p>
                </div>
                <!-- //Item -->

                <!-- Item -->
                <div class="one-third wow fadeIn" data-wow-delay=".4s">
                    <span class="circle"><span class="ico heart"></span></span>
                    <h3>Eco-friendly</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy  tinc dolore magna.</p>
                </div>
                <!-- //Item -->
            </div>
        </div>
    </div>
    <!-- //Services iconic -->

    <!-- Call to action -->
    <div class="black cta">
        <div class="wrap">
            <p class="wow fadeInLeft">Créer votre annonce dés maintenant</p>
            <a href={{ path('covoiturage_frontend_voyage_publish') }}" class="btn huge color right wow fadeInRight">Poster navette</a>
        </div>
    </div>
    <!-- //Call to action -->

</main>
<!-- //Main -->


{% include 'CovoiturageFrontendBundle:_common:footer.html.twig' %}

<!-- Preloader -->
<div class="preloader">
    <div id="followingBallsG">
        <div id="followingBallsG_1" class="followingBallsG"></div>
        <div id="followingBallsG_2" class="followingBallsG"></div>
        <div id="followingBallsG_3" class="followingBallsG"></div>
        <div id="followingBallsG_4" class="followingBallsG"></div>
    </div>
</div>
<!-- //Preloader -->



    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
    <!-- Modal Login -->
    <div class="modal" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                    <h4 class="modal-title" id="myModalLabel">Connexion</h4>
                </div>
                <div class="modal-body">
        {{ render(controller('CovoiturageFrontendBundle:User:login')) }}


                </div>

            </div>
        </div>
    </div>
        <!-- End Modal Login -->
    {% endif %}

    {% block javascripts %}
        {% include 'CovoiturageFrontendBundle:_common:loadjs.html.twig' %}
    {% endblock %}
</body>
</html>